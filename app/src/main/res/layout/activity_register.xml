<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/register"
    android:background="@color/white"
    tools:context=".activity.RegisterActivity">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="@color/light_white"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">

                <FrameLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/white"
                    android:elevation="5dp">

                    <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        app:tint="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/button_signUp"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </FrameLayout>
            </androidx.appcompat.widget.Toolbar>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Foto Profile -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/foto_detail"
                            android:paddingLeft="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">
                           <de.hdodenhof.circleimageview.CircleImageView
                               android:id="@+id/foto_karyawan"
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:src="@drawable/profile"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/pasang_foto_profile_mu_semua_orang_akan_bisa_lihat"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- Foto Profile -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ktp_detail"
                            android:paddingLeft="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/foto_ktp_karyawan"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/pasang_foto_ktp_anda_untuk_keperluan_administrasi_perusahaan"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--   Nama Karyawan -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/namakaryawan"
                            android:paddingLeft="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/profilektp"
                                android:layout_width="80dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="10dp"
                                android:textAlignment="center"
                                android:src="@drawable/profile"/>

                            <View
                                android:layout_width="0.1dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/dark_gray" />

                            <EditText
                                android:id="@+id/namamitra"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/countrycode"
                                android:background="@color/transparent"
                                android:hint="@string/namakaryawan"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--   idcard     -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/idcardkaryawan"
                            android:paddingLeft="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/imgidcard"
                                android:layout_width="80dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="10dp"
                                android:textAlignment="center"
                                />

                            <View
                                android:layout_width="0.1dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/dark_gray" />

                            <EditText
                                android:id="@+id/idcardkaryawan"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/countrycode"
                                android:background="@color/transparent"
                                android:hint="@string/idcardkaryawan"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--   Nomor Telepon  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hint_phone"
                            android:paddingLeft="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/countrycode"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="+62"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                            <View
                                android:layout_width="0.1dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_toRightOf="@+id/countrycode"
                                android:background="@color/dark_gray" />

                            <EditText
                                android:id="@+id/phonenumber"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/countrycode"
                                android:background="@color/transparent"
                                android:hint="@string/hint_phone"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--   Email  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hint_email"
                            android:paddingLeft="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/imgemail"
                                android:layout_width="80dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="10dp"
                                android:textAlignment="center"/>

                            <View
                                android:layout_width="0.1dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/dark_gray" />

                            <EditText
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                android:background="@color/transparent"
                                android:hint="@string/hint_email"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--   Nama Karyawan -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/alamatkaryawan"
                            android:paddingLeft="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/imgalamat"
                                android:layout_width="80dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="10dp"
                                android:textAlignment="center"/>

                            <View
                                android:layout_width="0.1dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/dark_gray" />

                            <EditText
                                android:id="@+id/alamatmitra"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/countrycode"
                                android:background="@color/transparent"
                                android:hint="@string/alamatkaryawan"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--   Tanggal Lahir -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Lahir"
                            android:paddingLeft="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/imgcalender"
                                android:layout_width="80dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="10dp"
                                android:textAlignment="center"/>

                            <View
                                android:layout_width="0.1dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_toRightOf="@+id/countrycode"
                                android:background="@color/dark_gray" />

                            <EditText
                                android:id="@+id/tanggallahir"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/countrycode"
                                android:background="@color/transparent"
                                android:hint="Tanggal Lahir"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--   Tempat Lahir -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tempat Lahir"
                            android:paddingLeft="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/imgtempatlahir"
                                android:layout_width="80dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="10dp"
                                android:textAlignment="center"/>

                            <View
                                android:layout_width="0.1dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_toRightOf="@+id/countrycode"
                                android:background="@color/dark_gray" />

                            <EditText
                                android:id="@+id/tempatmitra"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/countrycode"
                                android:background="@color/transparent"
                                android:hint="Tempat Lahir"
                                android:inputType="text"
                                android:maxLines="2"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--   Password  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/password"
                            android:paddingLeft="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/imgpassword"
                                android:layout_width="80dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="10dp"
                                android:textAlignment="center"/>

                            <View
                                android:layout_width="0.1dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/dark_gray" />

                            <EditText
                                android:id="@+id/passwordmitra"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/namamitra"
                                android:background="@color/transparent"
                                android:hint="@string/password"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"
                       android:layout_marginBottom="10dp"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="@string/status_karyawan"
                           android:paddingLeft="20dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:layout_marginBottom="15dp"
                           android:layout_marginTop="15dp"
                           android:textSize="20dp"/>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="40dp"
                           android:layout_marginTop="10dp"
                           android:background="@drawable/round_edittext_background">

                           <ImageView
                               android:id="@+id/imgstatusreg"
                               android:layout_width="80dp"
                               android:layout_height="15dp"
                               android:layout_centerVertical="true"
                               android:layout_marginTop="10dp"
                               android:textAlignment="center"
                               app:tint="@color/black"/>

                           <View
                               android:layout_width="0.1dp"
                               android:layout_height="match_parent"
                               android:layout_marginTop="5dp"
                               android:layout_marginBottom="5dp"
                               android:background="@color/dark_gray" />

                           <Spinner
                               android:id="@+id/karyawanstatus"
                               android:layout_width="match_parent"
                               android:layout_height="40dp"
                               android:background="@drawable/round_edittext_background"
                               android:gravity="center_vertical"
                               android:hint="@string/status_karyawan"
                               android:maxLines="1"
                               android:textColor="@color/black"
                               android:textColorHint="@color/gray"
                               android:textSize="15dp" />

                       </LinearLayout>
                   </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/jender_karyawan"
                            android:paddingLeft="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/round_edittext_background">

                            <ImageView
                                android:id="@+id/imggender"
                                android:layout_width="80dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="10dp"
                                android:textAlignment="center"
                                app:tint="@color/black"/>

                            <View
                                android:layout_width="0.1dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/dark_gray" />

                            <Spinner
                                android:id="@+id/karyawanjender"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/round_edittext_background"
                                android:gravity="center_vertical"
                                android:hint="@string/jender_karyawan"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="15dp" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/button_round_1"
                            android:text="@string/button_signUp"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/privacypolice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="30dp"
                            android:gravity="center"
                            android:lineSpacingExtra="5dp"
                            android:text="@string/login_persetujuan"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="14dp" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
            <RelativeLayout
                android:id="@+id/rlnotif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:background="@color/red"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textnotif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </RelativeLayout>
        <include layout="@layout/verifycode" />
    </ViewFlipper>
    <RelativeLayout
        android:id="@+id/rlprogress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparentblack"
        android:clickable="true"
        android:visibility="gone">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@color/white" />


        <ProgressBar
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/lllogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="10dp"
                android:src="@drawable/logo" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>