<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/light_gray"
    tools:context=".face.admin.AdminFaceRecogActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <org.opencv.android.JavaCameraView
            android:id="@+id/java_camera_view"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            />
        <Button
            android:id="@+id/take_picture_button"
            style="?metaButtonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/gray"
            android:textColor="@android:color/white"
            android:text="@string/picture_button"
            android:layout_below="@id/java_camera_view"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/take_picture_button">
            <LinearLayout
                android:id="@+id/linearLayoutfooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/textnama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select nama Karyawan:"
                    android:textSize="20dp"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"/>
                <ListView
                    android:id="@+id/listdata"
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/editNamakry"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:hint="@string/namakaryawan"
                    android:textColorHint="@color/black"
                    android:textSize="15dp"
                    android:visibility="gone"
                    android:background="@drawable/round_edittext_background"
                    />
                <Button
                    android:id="@+id/submitdata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_round_1"
                    android:text="Kirim"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>